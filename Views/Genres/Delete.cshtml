@model MVCBookStore.Models.Genre

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Delete Genre";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-5 col-md-8">

        <div class="card shadow-lg border-0">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="m-0 fw-bold"><i class="fas fa-exclamation-triangle me-2"></i> Confirm Deletion</h5>
            </div>

            <div class="card-body p-4 text-center">

                <h4 class="text-gray-900 mb-3">Delete this Genre?</h4>
                <p class="text-muted mb-4">
                    You are about to permanently delete the category below.<br>
                    <span class="text-danger small fw-bold">Warning: Books assigned to this genre might lose their categorization.</span>
                </p>

                <div class="bg-light p-3 rounded border mb-4 text-center">
                    <h2 class="fw-bold text-dark m-0">@Model.GenreName</h2>
                    <div class="mt-2">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-10">Active Status</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-10">Inactive Status</span>
                        }
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                            <i class="fas fa-trash-alt me-2"></i> Yes, Delete Genre
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-light border">
                            Cancel
                        </a>
                    </div>
                }
            </div>
        </div>

    </div>
</div>