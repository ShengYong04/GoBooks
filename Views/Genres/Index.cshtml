@model IEnumerable<MVCBookStore.Models.Genre>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Manage Genres";
}

<style>
    /* Vertically align table content */
    .table td, .table th {
        vertical-align: middle;
    }

    /* Action Button Styling */
    .action-group .btn {
        margin: 0 2px;
        border-radius: 4px;
    }
</style>

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="h3 mb-0 text-gray-800">Genre Management</h1>
        <p class="text-muted small mb-0">Organise your book categories.</p>
    </div>
    <a href="@Url.Action("Create")" class="btn btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50 me-1"></i> Add New Genre
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-white border-bottom-0 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">All Genres List</h6>
        <span class="badge bg-light text-dark border">Total: @Model.Count()</span>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="genreTable">
                <thead class="table-light text-secondary">
                    <tr>
                        <th class="ps-4">Genre Name</th>
                        <th>Status</th>
                        <th>Book Count</th>
                        <th class="text-center" style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-dark">
                                @Html.DisplayFor(modelItem => item.GenreName)
                            </td>

                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success px-2 py-1 rounded-pill">
                                        <i class="fas fa-check-circle me-1"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary px-2 py-1 rounded-pill">
                                        <i class="fas fa-ban me-1"></i> Inactive
                                    </span>
                                }
                            </td>

                            <td>
                                @if (item.Books != null)
                                {
                                    <span class="text-muted small">@item.Books.Count books</span>
                                }
                                else
                                {
                                    <span class="text-muted small">-</span>
                                }
                            </td>

                            <td class="text-center">
                                <div class="d-flex justify-content-center action-group">
                                    <a href="@Url.Action("Edit", new { id = item.GenreId })" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.GenreId })" class="btn btn-sm btn-outline-info" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.GenreId })" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="text-muted mb-2"><i class="fas fa-tags fa-3x opacity-25"></i></div>
                    <p class="text-muted">No genres found. Click "Add New Genre" to start.</p>
                </div>
            }
        </div>
    </div>
</div>