@model MVCBookStore.Models.Genre

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Genre Details";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-6">

        <div class="card shadow border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Genre Details</h6>
                <span class="badge bg-light text-muted border">ID: #@Model.GenreId</span>
            </div>

            <div class="card-body p-4">

                <div class="text-center mb-4">
                    <h2 class="fw-bold text-gray-800">@Model.GenreName</h2>
                    <div class="mt-2">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill border border-success border-opacity-10">
                                <i class="fas fa-check-circle me-1"></i> Active Category
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary bg-opacity-10 text-secondary px-3 py-2 rounded-pill border border-secondary border-opacity-10">
                                <i class="fas fa-ban me-1"></i> Inactive / Hidden
                            </span>
                        }
                    </div>
                </div>

                <hr class="my-4">

                <div class="row text-center">
                    <div class="col-6 border-end">
                        <div class="small text-uppercase text-muted fw-bold mb-1">Books Linked</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @(Model.Books != null ? Model.Books.Count : 0)
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="small text-uppercase text-muted fw-bold mb-1">Created Status</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <i class="fas fa-check text-success"></i>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-5">
                    <a href="@Url.Action("Edit", new { id = Model.GenreId })" class="btn btn-primary btn-lg shadow-sm">
                        <i class="fas fa-pen me-2"></i> Edit Genre
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-light border">
                        <i class="fas fa-arrow-left me-2"></i> Back to List
                    </a>
                </div>

            </div>
        </div>

    </div>
</div>