@model MVCBookStore.Models.Book

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Book Details";
}

<style>
    /* Clean Admin Styles */
    .book-cover-card {
        background: #fff;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        border: 1px solid #e3e6f0;
    }

    .book-cover-img {
        width: 100%;
        max-width: 250px;
        border-radius: 6px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    /* Data Grouping */
    .info-group {
        margin-bottom: 1.5rem;
    }

    .info-label {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #858796;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
    }

    .info-value {
        font-size: 1rem;
        font-weight: 600;
        color: #2e343a;
    }

    /* Developer / System Data Box */
    .dev-box {
        background-color: #f8f9fc;
        border: 1px dashed #d1d3e2;
        border-radius: 6px;
        padding: 10px 15px;
        font-family: 'Consolas', 'Monaco', monospace; 
        font-size: 0.85rem;
        color: #5a5c69;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-gray-800 fw-bold">Book Details</h1>
    </div>
    <div>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm me-2">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <a href="@Url.Action("Edit", new { id = Model.BookId })" class="btn btn-primary btn-sm">
            <i class="fas fa-edit"></i> Edit
        </a>
    </div>
</div>

<div class="row">

    <div class="col-lg-4 mb-4">
        <div class="book-cover-card shadow-sm h-100">
            <div class="mb-3">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success bg-opacity-10 text-success w-100 py-2">
                        <i class="fas fa-check-circle me-1"></i> Published
                    </span>
                }
                else
                {
                    <span class="badge bg-secondary bg-opacity-10 text-secondary w-100 py-2">
                        <i class="fas fa-eye-slash me-1"></i> Draft / Hidden
                    </span>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Title" class="book-cover-img mb-3" />
            }
            else
            {
                <div class="py-5 text-muted bg-light rounded mb-3">No Image</div>
            }

            <div class="row text-center mt-2">
                <div class="col-6 border-end">
                    <div class="small text-muted fw-bold">STOCK</div>
                    <div class="@(Model.Quantity < 5 ? "text-danger" : "text-dark") fw-bold">@Model.Quantity</div>
                </div>
                <div class="col-6">
                    <div class="small text-muted fw-bold">PRICE</div>
                    <div class="text-success fw-bold">@Model.Price.ToString("C")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white py-3">
                <h6 class="m-0 font-weight-bold text-primary">Product Information</h6>
            </div>
            <div class="card-body">

                <div class="row mb-4">
                    <div class="col-md-8">
                        <div class="info-group">
                            <div class="info-label">Title</div>
                            <div class="info-value fs-4">@Model.Title</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="info-group">
                            <div class="info-label">Genre</div>
                            <div class="info-value"><span class="badge bg-light text-dark border">@Model.Genre.GenreName</span></div>
                        </div>
                    </div>
                </div>

                <div class="info-group">
                    <div class="info-label">Author</div>
                    <div class="info-value">@Model.Author</div>
                </div>

                <div class="info-group">
                    <div class="info-label">ISBN</div>
                    <div class="info-value">@Model.ISBN</div>
                </div>

                <div class="info-group">
                    <div class="info-label">Description</div>
                    <div class="info-value text-secondary small" style="line-height: 1.6;">
                        @Model.Description
                    </div>
                </div>            
            </div>
        </div>
    </div>
</div>