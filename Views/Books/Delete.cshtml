@model MVCBookStore.Models.Book

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Delete Book";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-6 col-md-8">

        <div class="card shadow-lg border-0">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="m-0 fw-bold"><i class="fas fa-exclamation-triangle me-2"></i> Delete Confirmation</h5>
            </div>

            <div class="card-body p-4 text-center">

                <h4 class="text-gray-900 mb-3">Are you sure you want to delete this book?</h4>
                <p class="text-muted mb-4">
                    This action will permanently remove the record from the database.
                    <br />If there are orders linked to this book, you might encounter an error.
                </p>

                <div class="card bg-light border-0 mb-4 mx-auto" style="max-width: 400px;">
                    <div class="card-body d-flex align-items-center text-start">
                        <div class="flex-shrink-0">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Title" class="rounded shadow-sm" style="width: 70px; height: 100px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-white rounded border d-flex align-items-center justify-content-center" style="width: 70px; height: 100px;">
                                    <i class="fas fa-book text-muted"></i>
                                </div>
                            }
                        </div>

                        <div class="flex-grow-1 ms-3">
                            <h5 class="fw-bold text-dark mb-1">@Model.Title</h5>
                            <div class="text-muted small mb-1">by @Model.Author</div>
                            <div class="badge bg-secondary">@Model.Genre.GenreName</div>
                            <div class="mt-1 fw-bold text-danger">ID: #@Model.BookId</div>
                        </div>
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="d-grid gap-2 d-md-flex justify-content-center">
                        <a href="@Url.Action("Index")" class="btn btn-light btn-lg px-4 border">
                            Cancel
                        </a>

                        <button type="submit" class="btn btn-danger btn-lg px-4 shadow-sm">
                            <i class="fas fa-trash-alt me-2"></i> Yes, Delete It
                        </button>
                    </div>
                }
            </div>

            <div class="card-footer bg-light text-center py-3">
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Check stock level (@Model.Quantity) and active orders before deleting.
                </small>
            </div>
        </div>

    </div>
</div>