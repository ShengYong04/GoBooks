@model MVCBookStore.Models.Book

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Book";
}

<style>
    .card-header {
        background-color: #fff;
        border-bottom: 1px solid #eee;
        font-weight: 700;
        color: #4a5568;
        padding: 15px 20px;
    }

    .form-label {
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 8px;
    }

    .form-control, .form-select {
        padding: 10px 15px;
        border-radius: 6px;
        border: 1px solid #e2e8f0;
    }

        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 3px rgba(78, 115, 223, 0.1);
        }

    .dropzone-area {
        border: 2px dashed #e2e8f0;
        border-radius: 8px;
        padding: 30px;
        text-align: center;
        background-color: #f8fafc;
        cursor: pointer;
        transition: all 0.3s;
    }

        .dropzone-area:hover {
            background-color: #edf2f7;
            border-color: #cbd5e0;
        }

    .img-preview-box {
        max-height: 200px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h3 mb-0 text-gray-800 fw-bold">Edit Book</h2>
        <p class="text-muted small mb-0">Modify the details below.</p>
    </div>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
        <i class="fas fa-arrow-left me-1"></i> Back to List
    </a>
</div>

@using (Html.BeginForm("Edit", "Books", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BookId)
    @Html.HiddenFor(m => m.ImageUrl)
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card shadow-sm mb-4">
                <div class="card-header">General Information</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.Title, "Book Name", new { @class = "form-label" })
                            @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.Author, "Author Name", new { @class = "form-label" })
                            @Html.EditorFor(m => m.Author, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Author, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.ISBN, "ISBN", new { @class = "form-label" })
                            @Html.EditorFor(m => m.ISBN, new { htmlAttributes = new { @class = "form-control", placeholder = "Numbers only", oninput = "this.value=this.value.replace(/[^0-9]/g,'')" } })
                            @Html.ValidationMessageFor(m => m.ISBN, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Description, "Description", new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5 })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger small" })
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header">Book Details & Settings</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.Price, "Price (RM)", new { @class = "form-label" })
                            <div class="input-group">
                                <span class="input-group-text">RM</span>
                                @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.Quantity, "Stock Quantity", new { @class = "form-label" })
                            @Html.EditorFor(m => m.Quantity, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                            @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.GenreId, "Category (Genre)", new { @class = "form-label" })
                            @Html.DropDownList("GenreId", null, "-- Select Genre --", new { @class = "form-select" })
                            @Html.ValidationMessageFor(m => m.GenreId, "", new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.IsActive, "Product Status", new { @class = "form-label" })
                            @Html.DropDownListFor(m => m.IsActive,
                                new List<SelectListItem>
                                {
                                    new SelectListItem { Text = "Published", Value = "true", Selected = Model.IsActive },
                                    new SelectListItem { Text = "Draft / Inactive", Value = "false", Selected = !Model.IsActive }
                                },
                                new { @class = "form-select" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header">Book Cover</div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            <label class="form-label d-block text-muted small">Current Cover</label>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-preview-box" />
                            }
                            else
                            {
                                <div class="p-4 bg-light border rounded text-muted">No Image</div>
                            }
                        </div>

                        <div class="col-md-8">
                            <label class="form-label">Upload New Cover</label>
                            <div class="dropzone-area" onclick="document.getElementById('fileInput').click()">
                                <i class="fas fa-cloud-upload-alt fa-2x text-muted mb-2"></i>
                                <p class="mb-0 text-muted small">Click box to upload new image</p>
                                <input type="file" id="fileInput" name="upload" class="d-none" onchange="previewImage(this)" />
                            </div>
                            @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger small" })

                            <div id="imagePreviewContainer" class="mt-3 d-none">
                                <span class="badge bg-success mb-2">New Selection:</span><br />
                                <img id="imagePreview" src="#" class="img-thumbnail" style="height: 100px;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mb-5">
                <a href="@Url.Action("Index")" class="btn btn-light border px-4">Cancel</a>
                <button type="submit" class="btn btn-primary px-4">
                    <i class="fas fa-save me-2"></i> Save Changes
                </button>
            </div>

        </div>
    </div>
}

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var preview = document.getElementById('imagePreview');
                var container = document.getElementById('imagePreviewContainer');
                preview.src = e.target.result;
                container.classList.remove('d-none');
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
