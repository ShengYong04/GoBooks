@model IEnumerable<MVCBookStore.Models.Order>

@{
    ViewBag.Title = "Order Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Order Management</h1>
</div>

<div class="mb-4">
    <a href="@Url.Action("Index", "AdminOrder")" class="btn btn-sm @(ViewBag.CurrentStatus == null ? "btn-primary" : "btn-light") shadow-sm me-1">All</a>
    <a href="@Url.Action("Index", "AdminOrder", new { status = "Processing" })" class="btn btn-sm @(ViewBag.CurrentStatus == "Processing" ? "btn-info" : "btn-light") shadow-sm me-1">Processing</a>
    <a href="@Url.Action("Index", "AdminOrder", new { status = "Shipped" })" class="btn btn-sm @(ViewBag.CurrentStatus == "Shipped" ? "btn-primary" : "btn-light") shadow-sm me-1">Shipped</a>
    <a href="@Url.Action("Index", "AdminOrder", new { status = "Completed" })" class="btn btn-sm @(ViewBag.CurrentStatus == "Completed" ? "btn-success" : "btn-light") shadow-sm me-1">Completed</a>
    <a href="@Url.Action("Index", "AdminOrder", new { status = "Cancelled" })" class="btn btn-sm @(ViewBag.CurrentStatus == "Cancelled" ? "btn-danger" : "btn-light") shadow-sm">Cancelled</a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Orders List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">#@item.OrderId</td>
                            <td>@item.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <div>@(item.User != null ? item.User.UserName : "Unknown")</div>
                                <div class="small text-muted">@(item.User != null ? item.User.Email : "")</div>
                            </td>
                            <td>@item.TotalAmount.ToString("F2")</td>
                            <td>
                                @if (item.Status == "Completed")
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else if (item.Status == "Shipped")
                                {
                                    <span class="badge bg-primary">Shipped</span>
                                }
                                else if (item.Status == "Processing")
                                {
                                    <span class="badge bg-info text-white">Processing</span>
                                }
                                else if (item.Status == "Cancelled")
                                {
                                    <span class="badge bg-danger">Cancelled</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">@item.Status</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "AdminOrder", new { id = item.OrderId })" class="btn btn-primary btn-sm shadow-sm">
                                    <i class="fas fa-eye fa-sm text-white-50 mr-1"></i> Manage
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>