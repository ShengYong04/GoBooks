@model MVCBookStore.ViewModels.OrderDetailsViewModel

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    @@media print {
        body * {
            visibility: hidden;
        }

        #printable-area, #printable-area * {
            visibility: visible;
        }

        #printable-area {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            margin: 0;
            padding: 0;
        }

        .no-print {
            display: none !important;
        }

        .badge {
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
            border: 1px solid #000;
        }
    }
</style>

<div class="container py-5" id="printable-area">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark m-0">Order Receipt</h2>

        <div class="d-flex gap-2 no-print">
            <button onclick="window.print()" class="btn btn-secondary btn-sm rounded-pill px-3">
                <i class="fas fa-print me-2"></i> Print
            </button>

            <a href="@Url.Action("Index", "Manage")" class="btn btn-outline-primary btn-sm rounded-pill px-4 fw-bold">
                <i class="fas fa-arrow-left me-2"></i> Back
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">

        <div class="card-header bg-light py-3 px-4 border-bottom">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div>
                    <span class="text-muted small text-uppercase fw-bold">Order ID</span>
                    <h5 class="fw-bold m-0 text-primary">#@Model.OrderId</h5>
                </div>
                <div class="text-md-end">
                    <span class="text-muted small text-uppercase fw-bold d-block">Order Date</span>
                    <span class="fw-bold text-dark">@Model.OrderDate.ToString("dd MMM yyyy, h:mm tt")</span>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row g-4 mb-5">

                <div class="col-md-6">
                    <h6 class="fw-bold text-dark mb-3 border-bottom pb-2">Status</h6>

                    <div class="mb-3">
                        <span class="text-muted small">Current Status:</span><br />
                        @if (Model.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark px-3 py-2 rounded-pill mt-1">Pending</span>
                        }
                        else if (Model.Status == "Processing")
                        {
                            <span class="badge bg-primary px-3 py-2 rounded-pill mt-1">Processing</span>
                        }
                        else if (Model.Status == "Shipped")
                        {
                            <span class="badge bg-info text-white px-3 py-2 rounded-pill mt-1">Shipped</span>
                        }
                        else if (Model.Status == "Completed" || Model.Status == "Delivered")
                        {
                            <span class="badge bg-success px-3 py-2 rounded-pill mt-1">Delivered</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary px-3 py-2 rounded-pill mt-1">@Model.Status</span>
                        }
                    </div>
                </div>

                <div class="col-md-6">
                    <h6 class="fw-bold text-dark mb-3 border-bottom pb-2">Delivery Address</h6>
                    <address class="text-muted small mb-0">
                        <strong class="text-dark">@Model.FullName</strong><br />
                        @Model.AddressLine1<br />
                        @if (!string.IsNullOrEmpty(Model.AddressLine2))
                        {
                            @Model.AddressLine2<br />
                        }
                        @Model.PostalCode @Model.City, @Model.State<br />
                        <div class="mt-2">
                            <i class="fas fa-phone me-1"></i> @Model.PhoneNumber<br />
                            <i class="fas fa-envelope me-1"></i> @Model.Email
                        </div>
                    </address>
                </div>
            </div>

            <h6 class="fw-bold text-dark mb-3">Order Items</h6>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-3">Product</th>
                            <th class="py-3 text-center">Quantity</th>
                            <th class="py-3 text-end">Price</th>
                            <th class="py-3 text-end pe-3">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td class="ps-3 py-3">
                                    <span class="fw-bold text-dark">@item.BookTitle</span>
                                </td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">RM @item.Price.ToString("F2")</td>
                                <td class="text-end pe-3 fw-bold">RM @((item.Price * item.Quantity).ToString("F2"))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="border-top">
                        <tr>
                            <td colspan="3" class="text-end pt-4 pb-1">Subtotal</td>
                            <td class="text-end pe-3 pt-4 pb-1 fw-bold">RM @Model.TotalAmount.ToString("F2")</td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-end pb-1 text-muted border-0">Shipping Fee</td>
                            <td class="text-end pe-3 pb-1 text-success border-0">Free</td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-end pt-3 border-0">
                                <span class="fs-5 fw-bold text-dark">Grand Total</span>
                            </td>
                            <td class="text-end pe-3 pt-3 border-0">
                                <span class="fs-4 fw-bold text-primary">RM @Model.TotalAmount.ToString("F2")</span>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white text-center py-3 no-print-hide" style="display:none;">
            <small class="text-muted">Thank you for shopping with GoBooks!</small>
        </div>
    </div>
</div>

<script>
    window.onbeforeprint = function() {
        document.querySelector('.no-print-hide').style.display = 'block';
    };
    window.onafterprint = function() {
        document.querySelector('.no-print-hide').style.display = 'none';
    };
</script>