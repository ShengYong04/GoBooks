@model MVCBookStore.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<div class="container login-container">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 col-lg-5 col-xl-4">

            <div class="mb-3 text-start">
                <a href="@Url.Action("Index", "Home")" class="text-decoration-none text-muted small fw-bold hover-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Store
                </a>
            </div>

            <div class="login-card shadow-lg">
                <div class="login-header bg-primary text-white text-center py-4">
                    <i class="fas fa-key mb-2" style="font-size: 3rem;"></i>
                    <h3 class="fw-bold mb-0">Security</h3>
                    <p class="small text-white-50 mb-0">Update your password</p>
                </div>

                <div class="login-body p-4">
                    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger small text-center mb-3" })

                        <div class="mb-3">
                            @Html.LabelFor(m => m.OldPassword, new { @class = "form-label small fw-bold text-muted" })
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-primary"><i class="fas fa-unlock"></i></span>
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control border-start-0", placeholder = "Current Password" })
                            </div>
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.NewPassword, new { @class = "form-label small fw-bold text-muted" })
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-primary"><i class="fas fa-lock"></i></span>
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control border-start-0", placeholder = "New Password" })
                            </div>
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label small fw-bold text-muted" })
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-primary"><i class="fas fa-check-double"></i></span>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control border-start-0", placeholder = "Confirm New Password" })
                            </div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block py-2 fw-bold rounded-pill shadow-sm">
                                Change Password
                            </button>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}