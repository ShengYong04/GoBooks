@model MVCBookStore.Models.Order

@{
    ViewBag.Title = "Order Confirmed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 text-center">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 600px;">
        <div class="card-body p-5">
            <div class="mb-4">
                <i class="fas fa-check-circle text-success" style="font-size: 80px;"></i>
            </div>

            <h1 class="h2 fw-bold text-success mb-3">Order Confirmed!</h1>
            <p class="text-muted mb-4">
                Thank you for your purchase. Your order <strong>#@Model.OrderId</strong> has been received.
            </p>

            <div class="bg-light p-3 rounded mb-4 text-start">
                <div class="d-flex justify-content-between mb-2">
                    <span>Order Date:</span>
                    <strong>@Model.OrderDate.ToString("dd MMM yyyy, h:mm tt")</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Total Amount:</span>
                    <strong class="text-primary">@Model.TotalAmount.ToString("C")</strong>
                </div>
                <div class="d-flex justify-content-between mt-2">
                    <span>Status:</span>
                    <span class="badge bg-warning text-dark">Processing</span>
                </div>
            </div>

            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-dark px-4">
                Continue Shopping
            </a>
        </div>
    </div>
</div>