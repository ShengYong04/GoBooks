@model IEnumerable<MVCBookStore.Models.Order>

@{
    ViewBag.Title = "Manage Orders";
    // IMPORTANT: Use Admin Layout for this view
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Order Management</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Orders List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">#@item.OrderId</td>
                            <td>@item.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <div>@item.User.UserName</div>
                                <div class="small text-muted">@item.User.Email</div>
                            </td>
                            <td>@item.TotalAmount.ToString("C")</td>
                            <td>
                                @if (item.Status == "Completed")
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else if (item.Status == "Shipped")
                                {
                                    <span class="badge bg-primary">Shipped</span>
                                }
                                else if (item.Status == "Processing")
                                {
                                    <span class="badge bg-warning text-dark">Processing</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Status</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Order", new { id = item.OrderId })" class="btn btn-info btn-sm shadow-sm">
                                    <i class="fas fa-eye fa-sm text-white-50 mr-1"></i> Manage
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>