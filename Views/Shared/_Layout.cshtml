@using Microsoft.AspNet.Identity
@using MVCBookStore.Models
@{
    Layout = null;

    string displayName = "User"; // Default display name
    int cartCount = 0;

    if (Request.IsAuthenticated)
    {
        var userId = User.Identity.GetUserId();
        using (var db = new ApplicationDbContext())
        {
            // Get user info
            var user = db.Users.Find(userId);
            if (user != null)
            {
                // Use FullName if available, otherwise fallback to first part of email
                if (!string.IsNullOrWhiteSpace(user.FullName))
                {
                    displayName = user.FullName;
                }
                else
                {
                    displayName = User.Identity.Name.Split('@')[0];
                }

                // Get cart count
                var userCart = db.Carts.Include("CartItems").FirstOrDefault(c => c.UserId == userId);
                if (userCart != null)
                {
                    cartCount = userCart.CartItems.Sum(ci => ci.Quantity);
                }
            }
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - GoBooks</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
</head>

<body>
    <header class="mph-header sticky-top">
        <div class="container">
            <div class="row align-items-center">

                <div class="col-lg-3 col-md-12 text-center text-lg-start mb-3 mb-lg-0">
                    <a href="@Url.Action("Index", "Home")" class="brand-logo">
                        <i class="fas fa-book-open text-primary"></i>
                        <span class="text-primary">Go</span><span class="text-dark">Books</span>
                    </a>
                </div>

                <div class="col-lg-5 col-md-12 mb-3 mb-lg-0">
                    <form action="@Url.Action("Index", "Home")" method="get">
                        <div class="input-group rounded-pill overflow-hidden border shadow-sm">
                            <span class="input-group-text bg-white border-0 ps-3"><i class="fas fa-search text-muted"></i></span>
                            <input type="text" class="form-control border-0" name="search" placeholder="Search by Title, Author, Keyword, ISBN..." />
                        </div>
                    </form>
                </div>

                <div class="col-lg-4 col-md-12 d-flex justify-content-center justify-content-lg-end align-items-center gap-3">
                    @if (Request.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <a href="#" class="user-btn-oval dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle fa-lg me-2 text-primary"></i>
                                <div class="d-flex flex-column" style="line-height: 1.1;">
                                    <small class="text-muted" style="font-size: 10px; text-transform: uppercase; font-weight: 700;">Account</small>
                                    <span style="font-weight: 700; font-size: 13px;">@displayName</span>
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2">
                                <li>
                                    <a class="dropdown-item py-2" href="@Url.Action("Index", "Manage")">
                                        <i class="fas fa-user-cog me-2 text-muted"></i> My Profile & Orders
                                    </a>
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header text-danger small fw-bold">Admin Tools</h6></li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "Admin")">
                                            <i class="fas fa-tachometer-alt me-2 text-danger"></i> Dashboard
                                        </a>
                                    </li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger py-2">
                                            <i class="fas fa-sign-out-alt me-2"></i> Log Out
                                        </button>
                                    }
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="user-btn-oval">
                            <i class="far fa-user me-2 text-primary"></i>
                            <div class="d-flex flex-column" style="line-height: 1.1;">
                                <span style="font-weight: 700; font-size: 13px;">Login / Sign Up</span>
                            </div>
                        </a>
                    }

                    <button class="cart-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#cartSidebar">
                        <i class="fas fa-shopping-cart me-2"></i>
                        <span>Cart</span>
                        <span class="badge bg-white text-primary ms-2 rounded-pill" id="cart-count">@cartCount</span>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <div class="container body-content mt-4" style="min-height: 60vh;">
        @RenderBody()
        <hr class="mt-5" />
        <footer class="text-center pb-4 text-muted">
            <p>&copy; @DateTime.Now.Year - GoBooks. Your Adventure Starts Here.</p>
        </footer>
    </div>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="cartSidebar" aria-labelledby="cartLabel">
        @if (Request.IsAuthenticated)
        {
            <div id="cart-content-wrapper">
                @Html.Action("GetCartSidebar", "Cart")
            </div>
        }
        else
        {
            <div class="offcanvas-header border-bottom">
                <h5 class="offcanvas-title">Your Cart</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
            </div>
            <div class="offcanvas-body text-center pt-5">
                <i class="fas fa-lock fa-3x text-muted mb-3 opacity-50"></i>
                <p>Please log in to view your shopping cart.</p>
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary rounded-pill px-4">Login Now</a>
            </div>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
    $(document).ready(function () {

        // 3. CONFIGURE TOASTR
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-right", // or toast-bottom-right
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "3000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        // 4. AUTO-SHOW MESSAGES FROM CONTROLLER
        var successMsg = '@TempData["SuccessMessage"]';
        if (successMsg) {
            toastr.success(successMsg);
        }

        var errorMsg = '@TempData["ErrorMessage"]';
        if (errorMsg) {
            toastr.error(errorMsg);
        }

        function updateHeaderCount() {
            var newCount = $("#hidden-cart-count").val();
            $("#cart-count").text(newCount ? newCount : "0");
        }

        $(document).on('click', '.js-add-to-cart', function (e) {
            e.preventDefault();
            var btn = $(this);
            var bookId = btn.data('book-id');
            var originalHtml = btn.html();

            btn.html('<i class="fas fa-spinner fa-spin"></i>').prop('disabled', true);

            $.ajax({
                url: '@Url.Action("AddToCart", "Cart")',
                type: 'POST',
                data: { bookId: bookId, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                success: function (html) {
                    if ($("#cart-content-wrapper").length) {
                        $("#cart-content-wrapper").replaceWith(html);
                    } else {
                        $("#cartSidebar").html(html);
                    }
                    updateHeaderCount();
                    var bsOffcanvas = new bootstrap.Offcanvas(document.getElementById('cartSidebar'));
                    bsOffcanvas.show();

                    // Show success toast instead of doing nothing
                    toastr.success("Item added to cart!");

                    btn.html(originalHtml).prop('disabled', false);
                },
                error: function () {
                    // Show error toast
                    toastr.error("Please log in to add items.");
                    btn.html(originalHtml).prop('disabled', false);
                }
            });
        });

        $(document).on('click', '.js-cart-remove', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var token = $('input[name="__RequestVerificationToken"]').val();
            $.ajax({
                url: '@Url.Action("RemoveFromCart", "Cart")',
                type: 'POST',
                data: { cartItemId: id, __RequestVerificationToken: token },
                success: function (html) {
                    $('#cart-content-wrapper').replaceWith(html);
                    updateHeaderCount();
                    toastr.info("Item removed from cart.");
                }
            });
        });

        $(document).on('click', '.js-cart-update', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var count = $(this).data('count');
            var token = $('input[name="__RequestVerificationToken"]').val();
            $.ajax({
                url: '@Url.Action("UpdateQuantity", "Cart")',
                type: 'POST',
                data: { cartItemId: id, count: count, __RequestVerificationToken: token },
                success: function (html) {
                    $('#cart-content-wrapper').replaceWith(html);
                    updateHeaderCount();
                }
            });
        });
    });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>