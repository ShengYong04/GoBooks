@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "_AdminLayout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Portal</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <style>
        /* --- 1. GLOBAL LAYOUT FIXES --- */
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f8f9fc;
            height: 100vh;
            overflow: hidden;
        }

        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
            height: 100%; 
        }

        /* --- 2. SIDEBAR (FIXED LEFT) --- */
        #sidebar {
            min-width: 225px;
            max-width: 225px;

            height: 100vh;

            overflow-y: auto;
            background: linear-gradient(180deg, #4e73df 10%, #224abe 100%);
            color: #fff;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            display: flex;
            flex-direction: column;
            z-index: 100;

            scrollbar-width: none;
        }

            #sidebar::-webkit-scrollbar {
                display: none;
            }

        .sidebar-brand {
            padding: 1.5rem 1rem;
            text-align: center;
            font-size: 1.2rem;
            font-weight: 800;
            letter-spacing: 0.05rem;
            text-transform: uppercase;
            color: #fff;
            text-decoration: none;
            display: block;
            white-space: nowrap;
        }

        .sidebar-divider {
            margin: 0 1rem 1rem;
            border-top: 1px solid rgba(255, 255, 255, 0.15);
        }

        #sidebar ul.components {
            padding: 0;
        }

        #sidebar ul li a {
            padding: 1rem;
            font-size: 0.9rem;
            display: block;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            font-weight: 700;
            white-space: nowrap;
            display: flex;
            align-items: center;
            justify-content: flex-start;
        }

            #sidebar ul li a:hover {
                color: #fff;
                background: rgba(255,255,255,0.1);
            }

        #sidebar ul li.active > a {
            color: #fff;
            font-weight: 900;
            opacity: 1;
        }

        #sidebar ul li a i {
            margin-right: 1rem;
            width: 20px;
            text-align: center;
            font-size: 1.1rem;
        }

        .sidebar-heading {
            color: rgba(255, 255, 255, 0.4);
            font-size: 0.75rem;
            font-weight: 800;
            text-transform: uppercase;
            padding: 0 1rem;
            margin-top: 1rem;
            margin-bottom: 0.5rem;
            white-space: nowrap;
        }

        /* --- 3. CONTENT AREA (SCROLLABLE RIGHT) --- */
        #content {
            width: 100%;
            height: 100vh;
            display: flex;
            flex-direction: column;
            overflow-y: auto;
        }

        .topbar {
            height: 4.375rem;
            background-color: #fff;
            box-shadow: 0 .15rem 1.75rem 0 rgba(58,59,69,.15);
            display: flex;
            align-items: center;
            padding: 0 1.5rem;
            position: sticky;
            top: 0;
            z-index: 50;
        }

        /* --- 4. TOGGLE & HOVER LOGIC --- */
        #sidebar.toggled {
            min-width: 90px !important;
            max-width: 90px !important;
        }

            #sidebar.toggled .sidebar-brand-text,
            #sidebar.toggled .sidebar-heading,
            #sidebar.toggled ul li a span {
                display: none;
            }

            #sidebar.toggled .sidebar-brand {
                padding: 1.5rem 0;
            }

            #sidebar.toggled ul li a {
                justify-content: center;
                padding: 1rem 0.5rem;
            }

                #sidebar.toggled ul li a i {
                    margin-right: 0;
                    font-size: 1.3rem;
                }

        @@media (min-width: 768px) {
            #sidebar.toggled:hover {
                min-width: 225px !important;
                max-width: 225px !important;
                box-shadow: 5px 0 15px rgba(0,0,0,0.3);
            }

                #sidebar.toggled:hover .sidebar-brand-text,
                #sidebar.toggled:hover .sidebar-heading,
                #sidebar.toggled:hover ul li a span {
                    display: inline-block !important;
                    animation: fadeIn 0.2s;
                }

                #sidebar.toggled:hover .sidebar-brand {
                    padding: 1.5rem 1rem;
                }

                #sidebar.toggled:hover ul li a {
                    justify-content: flex-start;
                    padding: 1rem;
                }

                    #sidebar.toggled:hover ul li a i {
                        margin-right: 1rem;
                    }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .main-content-area {
            padding: 1.5rem;
            flex: 1;
        }
    </style>
</head>
<body>

    <div class="wrapper">

        <nav id="sidebar">
            <a href="@Url.Action("Index", "Admin")" class="sidebar-brand d-flex align-items-center justify-content-center">
                <div class="sidebar-brand-icon"Manageme
                    <i class="fas fa-laugh-wink rotate-n-15"></i>
                </div>
                <div class="sidebar-brand-text mx-3">GoBooks Admin</div>
            </a>

            <hr class="sidebar-divider my-0">

            <ul class="list-unstyled components">

                <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Admin" ? "active" : "")">
                    <a href="@Url.Action("Index", "Admin")">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <hr class="sidebar-divider">
                <div class="sidebar-heading">Management</div>

                <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Books" ? "active" : "")">
                    <a href="@Url.Action("Index", "Books")">
                        <i class="fas fa-fw fa-book"></i>
                        <span>Books</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Genres" ? "active" : "")">
                    <a href="@Url.Action("Index", "Genres")">
                        <i class="fas fa-fw fa-tags"></i>
                        <span>Genres</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "AdminOrders" ? "active" : "")">
                    <a href="@Url.Action("Index", "AdminOrder")">
                        <i class="fas fa-fw fa-shopping-cart"></i>
                        <span>Orders</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div id="content">

            <nav class="topbar mb-4">
                <button id="sidebarToggleTop" class="btn btn-link text-primary rounded-circle mr-3">
                    <i class="fa fa-bars"></i>
                </button>

                <ul class="navbar-nav ms-auto d-flex align-items-center">
                    <div class="topbar-divider d-none d-sm-block" style="width: 0; border-right: 1px solid #e3e6f0; height: 2rem; margin: 0 1rem;"></div>

                    <li class="nav-item dropdown no-arrow">
                        <a class="nav-link dropdown-toggle d-flex align-items-center text-decoration-none" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <span class="mr-2 d-none d-lg-inline text-gray-600 small me-2" style="font-weight: 600;">
                                @User.Identity.Name
                            </span>
                            <img class="img-profile rounded-circle" src="https://ui-avatars.com/api/?name=Admin+User&background=4e73df&color=fff" style="width: 32px; height: 32px;">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow animated--grow-in">
                            <li>
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i> Logout
                                    </a>
                                }
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>

            <div class="main-content-area container-fluid">
                @RenderBody()
            </div>

            <footer class="sticky-footer bg-white mt-auto">
                <div class="container my-auto py-4">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; MVC BookStore Admin @DateTime.Now.Year</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#sidebarToggleTop').on('click', function () {
                $('#sidebar').toggleClass('toggled');
            });
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>