@using MVCBookStore.Models
@model LoginViewModel
@{
    ViewBag.Title = "Sign In";
}

<div class="container login-container position-relative">

    <div class="position-absolute top-0 start-0 mt-4 ms-3">
        <a href="@Url.Action("Index", "Home")" class="text-decoration-none text-muted fw-bold hover-primary">
            <i class="fas fa-arrow-left me-2"></i>Back to Store
        </a>
    </div>

    <div class="row justify-content-center w-100">
        <div class="col-md-6 col-lg-5 col-xl-4">

            <div class="login-card shadow-lg">
                <div class="login-header bg-primary text-white text-center py-4">
                    <i class="fas fa-book-reader mb-2" style="font-size: 3rem;"></i>
                    <h3 class="fw-bold mb-0">Welcome Back</h3>
                    <p class="small text-white-50 mb-0">Sign in to your account</p>
                </div>

                <div class="login-body p-4">
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger small text-center mb-3" })

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Email, new { @class = "form-label small fw-bold text-muted" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-primary"><i class="fas fa-envelope"></i></span>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-start-0", placeholder = "name@example.com" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Password, new { @class = "form-label small fw-bold text-muted" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-primary"><i class="fas fa-lock"></i></span>

                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control border-start-0 border-end-0", placeholder = "********", id = "password-field" })

                                    <button class="btn btn-light border border-start-0 text-muted" type="button" onclick="togglePassword()" style="border-color: #ced4da;">
                                        <i class="fas fa-eye" id="toggle-icon"></i>
                                    </button>
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label small text-muted" })
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-block py-2 fw-bold rounded-pill shadow-sm">
                                    Sign In
                                </button>
                            </div>

                            <div class="text-center mt-4 pt-3 border-top">
                                <span class="small text-muted">New here?</span>
                                <a href="@Url.Action("Register", "Account")" class="small fw-bold text-primary text-decoration-none ms-1">Create Account</a>
                            </div>
                        }
                    </section>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        function togglePassword() {
            var input = document.getElementById("password-field");
            var icon = document.getElementById("toggle-icon");

            if (input.type === "password") {
                input.type = "text"; // Show password
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash"); 
            } else {
                input.type = "password"; // Hide password
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye"); 
            }
        }
    </script>
}