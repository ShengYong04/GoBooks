
@model MVCBookStore.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home";
}

<div id="shop-section" class="container pb-5">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="filter-bar d-flex justify-content-between align-items-center flex-wrap gap-3">
        <h5 class="m-0 fw-bold text-dark"><i class="fas fa-filter me-2 text-secondary"></i> Browse Collection</h5>

        <form method="get" action="@Url.Action("Index", "Home")" class="d-flex gap-2">
            <select name="genreId" class="form-select form-select-sm" style="width: 200px;" onchange="this.form.submit()">
                <option value="">All Genres</option>
                @foreach (var g in Model.Genres)
                {
                    <option value="@g.GenreId" @(Model.GenreId == g.GenreId ? "selected" : "")>@g.GenreName</option>
                }
            </select>

            <select name="sortOrder" class="form-select form-select-sm" style="width: 200px;" onchange="this.form.submit()">
                <option value="">Sort By: Default</option>
                <option value="price_asc" @(Model.SortOrder == "price_asc" ? "selected" : "")>Price: Low to High</option>
                <option value="price_desc" @(Model.SortOrder == "price_desc" ? "selected" : "")>Price: High to Low</option>
            </select>

            @if (Model.GenreId != null || !string.IsNullOrEmpty(Model.SortOrder) || !string.IsNullOrEmpty(Model.Search))
            {
                <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-outline-danger" title="Clear Filters">
                    <i class="fas fa-times"></i>
                </a>
            }
        </form>
    </div>

    @if (Model.Books.Any())
    {
        // 1. FILTERED VIEW
        if (Model.GenreId.HasValue || !string.IsNullOrEmpty(Model.Search) || Model.Genres == null || !Model.Genres.Any())
        {
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4">
                @foreach (var book in Model.Books)
                {
                    <div class="col">
                        <div class="card h-100 book-card shadow-sm">
                            <div class="card-img-container">
                                <a href="@Url.Action("Details", "Home", new { id = book.BookId })">
                                    <img src="@(!string.IsNullOrEmpty(book.ImageUrl) ? book.ImageUrl : "/Content/Images/default.png")"
                                         class="card-img-top" alt="@book.Title" />
                                </a>
                            </div>
                            <div class="card-body p-3">
                                <a href="@Url.Action("Details", "Home", new { id = book.BookId })" class="text-decoration-none">
                                    <h5 class="book-title" title="@book.Title">@book.Title</h5>
                                </a>
                                <p class="book-author">@book.Author</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="book-price">RM @book.Price.ToString("F2")</span>

                                    @if (book.Quantity > 0)
                                    {
                                        <button class="btn btn-outline-primary btn-sm rounded-circle border-0 bg-light js-add-to-cart"
                                                data-book-id="@book.BookId"
                                                title="Add to Cart">
                                            <i class="fas fa-shopping-cart"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm disabled" disabled title="Out of Stock">
                                            <i class="fas fa-shopping-cart"></i>
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        // 2. CATEGORY VIEW
        else
        {
            foreach (var genre in Model.Genres)
            {
                var booksInGenre = Model.Books
                    .Where(b => b.GenreId == genre.GenreId && b.IsActive)
                    .OrderBy(b => b.Title)
                    .Take(5)
                    .ToList();

                if (booksInGenre.Any())
                {
                    <div class="genre-header">
                        <h2 class="genre-title">@genre.GenreName</h2>
                        <a href="@Url.Action("Index", "Home", new { genreId = genre.GenreId })" class="view-all-link">See All <i class="fas fa-chevron-right ms-1 small"></i></a>
                    </div>

                    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4">
                        @foreach (var book in booksInGenre)
                        {
                            <div class="col">
                                <div class="card h-100 book-card shadow-sm">
                                    <div class="card-img-container">
                                        <a href="@Url.Action("Details", "Home", new { id = book.BookId })">
                                            <img src="@(!string.IsNullOrEmpty(book.ImageUrl) ? book.ImageUrl : "/Content/Images/default.png")"
                                                 class="card-img-top" alt="@book.Title" />
                                        </a>
                                    </div>
                                    <div class="card-body p-3">
                                        <a href="@Url.Action("Details", "Home", new { id = book.BookId })" class="text-decoration-none">
                                            <h5 class="book-title" title="@book.Title">@book.Title</h5>
                                        </a>
                                        <p class="book-author">@book.Author</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="book-price">RM @book.Price.ToString("F2")</span>

                                            @if (book.Quantity > 0)
                                            {
                                                <button class="btn btn-outline-primary btn-sm rounded-circle border-0 bg-light js-add-to-cart"
                                                        data-book-id="@book.BookId"
                                                        title="Add to Cart">
                                                    <i class="fas fa-shopping-cart"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary btn-sm disabled" disabled title="Out of Stock">
                                                    <i class="fas fa-shopping-cart"></i>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-search fa-3x text-muted mb-3 opacity-25"></i>
            <h4 class="text-muted fw-light">No books found matching your criteria.</h4>
            <a href="@Url.Action("Index", "Home")" class="btn btn-link text-decoration-none mt-2">Clear Filters</a>
        </div>
    }
</div>