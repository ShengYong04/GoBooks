@model MVCBookStore.Models.Book

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.Title;
}

<style>
    /* New Custom Styles for Image Sizing */
    .product-img-box {
        background-color: #f8f9fa; /* Light grey background */
        border-radius: 12px;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 400px; /* Consistent height area */
    }

    .product-img {
        max-width: 100%;
        max-height: 500px; /* LIMIT HEIGHT HERE */
        width: auto; /* Maintain aspect ratio */
        object-fit: contain;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15); /* Nice shadow for book */
        border-radius: 4px;
    }
</style>

<div class="container product-container py-5">

    <div class="mb-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
            <i class="fas fa-arrow-left me-2"></i> Back to Store
        </a>
    </div>

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb small text-uppercase fw-bold">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-decoration-none text-muted">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { genreId = Model.GenreId })" class="text-decoration-none text-muted">@Model.Genre.GenreName</a></li>
            <li class="breadcrumb-item active text-primary" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="row g-5">

        <div class="col-lg-5">
            <div class="product-img-box">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Url.Content(Model.ImageUrl)" class="product-img" alt="@Model.Title"
                         onerror="this.src='/Content/Images/default.png'" />
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="fas fa-book fa-4x mb-3 opacity-25"></i>
                        <p>No Cover Image</p>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-7">
            <span class="badge bg-light text-primary border border-primary mb-2">@Model.Genre.GenreName</span>
            <h1 class="display-5 fw-bold mb-2">@Model.Title</h1>
            <p class="fs-5 text-muted mb-4">by <span class="text-dark fw-bold">@Model.Author</span></p>

            <div class="mb-4">
                <span class="display-6 fw-bold text-primary">RM @Model.Price.ToString("F2")</span>
            </div>

            <div class="d-flex gap-3 mb-5 align-items-center flex-wrap">
                @if (Model.Quantity > 0)
                {
                    <button class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm js-add-to-cart"
                            data-book-id="@Model.BookId">
                        <i class="fas fa-shopping-cart me-2"></i> Add to Cart
                    </button>
                    <div class="d-flex align-items-center text-success fw-bold small bg-success-subtle px-3 py-2 rounded-pill">
                        <i class="fas fa-check-circle me-2"></i> In Stock (@Model.Quantity)
                    </div>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg rounded-pill px-5 disabled" disabled>
                        <i class="fas fa-ban me-2"></i> Out of Stock
                    </button>
                }
            </div>

            <div class="mb-5">
                <h5 class="fw-bold border-bottom pb-2 mb-3">About this Book</h5>
                <div class="text-muted lh-lg" id="book-desc">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        @Model.Description
                    }
                    else
                    {
                        <span class="fst-italic">No description provided for this book.</span>
                    }
                </div>
                @if (!string.IsNullOrEmpty(Model.Description) && Model.Description.Length > 300)
                {
                    <button class="btn btn-link p-0 mt-2 text-decoration-none fw-bold" id="toggle-desc">Read More</button>
                }
            </div>

            <div class="bg-light p-4 rounded-3 border">
                <h6 class="fw-bold mb-3 small text-uppercase text-muted">Product Details</h6>
                <div class="row g-3 small">
                    <div class="col-6"><strong>ISBN:</strong> @(string.IsNullOrEmpty(Model.ISBN) ? "N/A" : Model.ISBN)</div>
                    <div class="col-6"><strong>SKU:</strong> #@Model.BookId</div>
                    <div class="col-6"><strong>Category:</strong> @Model.Genre.GenreName</div>
                    <div class="col-6"><strong>Date Added:</strong> @Model.CreatedDate.ToString("MMM yyyy")</div>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.RecommendedBooks != null && ((List<MVCBookStore.Models.Book>)ViewBag.RecommendedBooks).Any())
    {
        <div class="mt-5 pt-5 border-top">
            <h3 class="fw-bold mb-4">You might also like</h3>
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4">
                @foreach (var rec in (List<MVCBookStore.Models.Book>)ViewBag.RecommendedBooks)
                {
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm book-card">
                            <div class="position-relative overflow-hidden" style="height: 250px;">
                                <a href="@Url.Action("Details", "Home", new { id = rec.BookId })">
                                    <img src="@Url.Content(rec.ImageUrl)" class="w-100 h-100 object-fit-cover" alt="@rec.Title" />
                                </a>
                            </div>
                            <div class="card-body p-3">
                                <h6 class="fw-bold text-truncate mb-1">
                                    <a href="@Url.Action("Details", "Home", new { id = rec.BookId })" class="text-decoration-none text-dark">@rec.Title</a>
                                </h6>
                                <p class="text-muted small mb-2 text-truncate">@rec.Author</p>
                                <span class="fw-bold text-primary">RM @rec.Price.ToString("F2")</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Add to Cart Logic

            // Description Read More 
            const desc = document.getElementById("book-desc");
            const btn = document.getElementById("toggle-desc");

            if (desc && btn) {
                const fullText = desc.innerHTML.trim();
                const shortText = fullText.substring(0, 300) + "...";
                let isExpanded = false;

                desc.innerHTML = shortText;

                btn.addEventListener("click", function () {
                    if (isExpanded) {
                        desc.innerHTML = shortText;
                        btn.innerText = "Read More";
                    } else {
                        desc.innerHTML = fullText;
                        btn.innerText = "Show Less";
                    }
                    isExpanded = !isExpanded;
                });
            }
        });
    </script>
}